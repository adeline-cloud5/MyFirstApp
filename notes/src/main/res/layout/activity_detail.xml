<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Detail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <ImageButton
            android:id="@+id/back_bt"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:background="@mipmap/icons_back" />

        <EditText
            android:id="@+id/titleDetail"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/back_bt"
            android:layout_toLeftOf="@+id/tag_bt"
            android:gravity="center"
            android:background="#fff"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="#3700b3"
            android:text="Title" />

        <ImageButton
            android:id="@+id/tag_bt"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/tagText"
            android:background="@mipmap/icons_tag" />

        <TextView
            android:id="@+id/tagText"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="#3700b3"
            android:textSize="12sp"
            android:text="Tag" />

    </RelativeLayout>

    <TextView
        android:id="@+id/timeDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:gravity="center"
        android:textColor="#333"
        android:layout_margin="10dp"
        android:text="Time" />

    <EditText
        android:id="@+id/editDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ems="10"
        android:gravity="start|top"
        android:background="#eee"
        android:hint="imput detail"
        android:padding="20dp"
        android:inputType="textMultiLine" />
</LinearLayout>